<EditForm EditContext="editContext" OnValidSubmit="HandleValidSubmit">


    <div class="horizontal-container" style="gap: 2rem;">
        <div class="vertical">
            <label for="inputText">Numbers to focus on</label>
            <InputText id="inputText" @bind-Value="inputText" placeholder="(e.g. 1, 2, 7, 4 ...)" />
        </div>

        <div class="vertical">
            <label for="roundTime">Exercise Time</label>
            <div class="horizontal-container time-label">
                <p>Min</p>
                <p>Sec</p>
            </div>
            <div id="roundTime">
                <InputNumber id="minutes" @bind-Value="minutes" placeholder="Minutes" />
                <span> : </span>
                <InputNumber id="seconds" @bind-Value="seconds" placeholder="Seconds" />
            </div>
        </div>
        <div class="vertical">
            <label for="difficulty">Difficulty</label>
            <div id="difficulty" class="vertical">
                @foreach (var option in difficultyOptions)
                {
                    <div>
                        <input type="radio" id="@option" name="difficultyOptions" @bind="@selectedDifficulty" />
                        <label id="@option-label" for="@option">@option</label>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="vertical">
        <label for="operations">Operations to use</label>
        <div id="operations">
            @foreach (var option in operationsOptions)
            {
                <div>
                    <input type="checkbox" id="@option" value="@option"
                        @onchange="(e) => UpdateSelectedOptions(option, e.Value.ToString())"
                        @checked="@selectedOperations.Contains(option)" />
                    <label for="@option">@option</label>
                </div>
            }
        </div>
    </div>
    <button type="submit">Submit</button>
</EditForm>

@code {
    private EditContext? editContext;
    protected override void OnInitialized()
    {
        editContext = new EditContext(this);
    }
    private string inputText = "2, 3, 4, 5, 6, 7, 8, 9";
    private string selectedDifficulty = "Medium";
    private string[] difficultyOptions = new string[] { "Easy", "Normal", "Hard" };

    private List<string> selectedOperations = new List<string>();
    private List<string> operationsOptions = new List<string> { "+", "-", "x", "รท" };

    private int minutes = 5;
    private int seconds = 0;
    private void HandleValidSubmit()
    {

    }
    private void UpdateSelectedOptions(string option, string value)
    {
        Console.WriteLine(selectedOperations.ToString());
        if (value == "true")
        {
            selectedOperations.Add(option);
        }
        else
        {
            selectedOperations.Remove(option);
        }
    }
}